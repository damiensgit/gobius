    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Miner.go on testnet",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "miner.go",
            "args": ["-config", "testnet.json","-testnet", "2", "-skipvalidation"],
        },
        {
            "name": "Launch Miner.go on localnet",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["-config", "local.json","-testnet", "1", "-skipvalidation"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch commands",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "./cmd/gobius/main.go",
            "args": ["-config", "../../testnet.json"],
        }
    ]
}